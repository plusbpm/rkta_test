{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["es2015"],
    "module": "commonjs",
    "noImplicitAny": true,
    "noLib": false,
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2015"
  },
  "include": ["packages/**/src"],
  "exclude": ["node_modules", "**/*.spec.ts"],
  "types": ["typePatches"]
}
